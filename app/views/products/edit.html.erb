<h3>Edit Product Form</h3>

<form action="/form-product/<%= @market.id %>/update" method="POST" accept-charset="utf-8">
  <input type="hidden" name="_method" value="PUT">
  <label for="name"> Product Name  </label><input type="text" name="product[name]" value= "<%= @product.name %>" ><br />
  <label for="vendor_id"> Vendor ID </label><input type="text" name="product[vendor_id]" value= "<%= @product.vendor_id %>" ><br />
  <p><input type="submit" value="Submit"></p>
</form>

<%= link_to 'Delete', "/product/#{@product.id}", method: :delete %>
